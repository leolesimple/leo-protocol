{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "lib": ["esnext"],
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "vitest.config.ts"]
}
